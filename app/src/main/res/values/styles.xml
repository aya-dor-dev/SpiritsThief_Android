<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:subtitleTextAppearance">@style/ToolbarSubtitleTitleTextAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="ErrorTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BottomSheetTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="SortOptionStyle" parent="@android:style/TextAppearance.Medium">
