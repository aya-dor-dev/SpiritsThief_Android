<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="3dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_card"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:transitionName="@string/transition_bottle_image"
                    app:cardCornerRadius="88dp"
                    app:cardElevation="0dp"
                    app:contentPadding="4dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/bottleImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_bottle_place_holder" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                style="@style/CollectionBottleNameTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="BottlesName"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>